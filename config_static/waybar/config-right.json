{
    "layer": "top", 
    "position": "right",
    "width": 50,
    "spacing": 4,
    "exclusive": true,
    "gtk-layer-shell": true,
    "passthrough": false,
    "fixed-center": true,
    "modules-left": [
        "cpu",
        "memory",
        "temperature"
    ],
    "modules-center": [
        "pulseaudio",
        "network",
        "bluetooth"
    ],
    "modules-right": [
        "battery",
        "backlight",
        "custom/notification"
    ],
    
    "cpu": {
        "format": "",
        "tooltip-format": "CPU: {usage}%\nLoad: {load}",
        "interval": 2,
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    
    "memory": {
        "format": "",
        "tooltip-format": "RAM: {used:0.1f}G/{total:0.1f}G ({percentage}%)",
        "interval": 2,
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    
    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "format": "",
        "tooltip-format": "CPU Temp: {temperatureC}Â°C",
        "critical-threshold": 80,
        "format-critical": "",
        "interval": 2
    },
    
    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "tooltip-format": "Volume: {volume}%\nDevice: {desc}",
        "on-click": "pavucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "scroll-step": 5
    },
    
    "network": {
        "format-wifi": "",
        "format-ethernet": "",
        "format-disconnected": "",
        "tooltip-format-wifi": "WiFi: {essid} ({signalStrength}%)\nIP: {ipaddr}",
        "tooltip-format-ethernet": "Ethernet: {ifname}\nIP: {ipaddr}",
        "tooltip-format-disconnected": "No network connection",
        "on-click": "nm-connection-editor"
    },
    
    "bluetooth": {
        "format": "",
        "format-disabled": "",
        "format-off": "",
        "format-connected": "",
        "tooltip-format": "Bluetooth: {status}",
        "tooltip-format-connected": "Bluetooth: {device_alias} ({device_battery_percentage}%)",
        "on-click": "blueman-manager"
    },
    
    "battery": {
        "format": "{icon}",
        "format-icons": ["", "", "", "", ""],
        "format-charging": "",
        "format-plugged": "",
        "tooltip-format": "Battery: {capacity}% ({time})",
        "states": {
            "warning": 30,
            "critical": 15
        }
    },
    
    "backlight": {
        "format": "{icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""],
        "tooltip-format": "Brightness: {percent}%",
        "scroll-step": 5,
        "on-scroll-up": "brightnessctl set +5%",
        "on-scroll-down": "brightnessctl set 5%-"
    },
    
    "custom/notification": {
        "format": "",
        "tooltip": "Notifications",
        "on-click": "dunstctl history-pop",
        "on-click-right": "dunstctl close-all"
    }
}