/* ~/.config/rofi/theme.rasi */
/* Dynamic theme for rofi - generated by clypr */

* {
    background-color: {{background_color}};
    border-color: {{primary_color}};
    text-color: {{text_primary_color}};
    accent-color: {{accent_color}};
    
    spacing: 2;
    background-alternate: {{background_color}}dd;
    foreground: {{text_primary_color}};
    background-focus: {{primary_color}}44;
    foreground-focus: {{text_accent_color}};
}

window {
    transparency: "real";
    background-color: @background-color;
    border: 2px;
    border-color: @border-color;
    border-radius: 8px;
    padding: 5px;
}

mainbox {
    border: 0;
    padding: 0;
}

listview {
    fixed-height: 0;
    border: 2px dash 0px 0px;
    border-color: @border-color;
    spacing: 2px;
    scrollbar: false;
    padding: 2px 0px 0px;
}

element {
    border: 0;
    padding: 8px;
    border-radius: 4px;
}

element selected {
    background-color: @accent-color;
    text-color: @background-color;
}

inputbar {
    spacing: 0px;
    text-color: @foreground;
    padding: 8px;
    children: [ prompt,textbox-prompt-colon,entry ];
}

entry {
    spacing: 0;
    text-color: @foreground;
    placeholder: "Search...";
}

prompt {
    spacing: 0;
    text-color: @accent-color;
}

textbox-prompt-colon {
    expand: false;
    str: ": ";
    text-color: inherit;
}
